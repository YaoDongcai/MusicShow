.hx-video {
  margin-top: 20rpx;
  background: white;
}
.hx-video-title {
  font-size: 16px;
  font-weight: 400;
  color: black;
  line-height: 45px;
}
.hx-video-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.hx-video-content-item {
  width: 25%;
  display: inline-block;
  position: relative;
  padding-right: 10rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.hx-video-content-item-image {
  width: 100%;
  height: 165rpx;
}
.hx-video-content-item-del {
  display: inline-block;
  position: absolute;
  top: 0px;
  right: 10rpx;
  z-index: 12;
  width: 44rpx !important;
  height: 44rpx !important;
}
.hx-video-content-add {
  width: 25%;
  display: inline-block;
}
.hx-video-content-add image {
  width: 100%;
  height: 165rpx;
}
